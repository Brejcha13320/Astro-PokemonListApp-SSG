---
interface Props {
    currentPath: string;
}

const { currentPath } = Astro.props;
---
<div class="flex justify-center gap-5 my-5" >
    <a 
        href="/"
        class:list={[{ active: currentPath === '/' }]}> 
        Listado Básico 
    </a>
    <a  href="/pokemons/1"
        class:list={[{ active: /^\/pokemons\/\d+$/.test(currentPath) }]}>
        Listado con Paginación
    </a>
</div>

<style>
    @reference '@styles/global.css';
    a {
        @apply bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded cursor-pointer
    }
    .active {
        @apply bg-blue-700
    }
</style>