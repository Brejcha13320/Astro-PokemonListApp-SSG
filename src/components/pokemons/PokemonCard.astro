---
interface Props {
    url: string;
    name: string;
    isBig?: boolean;
}

const { url, name, isBig = false } = Astro.props;
const pokemonId = url.split('/').at(-2);
const pokemonUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${pokemonId}.png`
---

<div
   
    class:list={[
        'rounded flex flex-col justify-center items-center p-2',
        { border: !isBig }
    ]}>

    <img
        transition:name={`${name}-pokemon`}
        class:list={[
            { 
                'w-26 h-26': isBig,
                'w-22 h-22': !isBig,
            },
        ]}
        src={pokemonUrl} alt={name}>

    <span
        class:list={[
            'capitalize',
            {
                'text-4xl text-blue-300': isBig
            }
        ]}>#{pokemonId} { name }</span>
    
    <div
        class:list={[
            'p-2 gap-2',
            { 'inline-flex': !isBig },
            { hidden: isBig }
        ]}>
        <a href={`/pokemons/${name}`} class="a-search-gray">Nombre</a>
        <a href={`/pokemon/${pokemonId}`} class="a-search-gray">Id</a>
    </div>

</div>

<style>
    @reference '@styles/global.css';
    .a-search-gray {
        @apply inline-flex items-center rounded-md bg-gray-400/10 px-2 py-1 text-xs font-medium text-gray-400 inset-ring inset-ring-gray-400/20;
    }
</style>