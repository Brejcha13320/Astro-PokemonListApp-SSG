---
import MainLayout from "@layouts/MainLayout.astro";
import type { PokemonList } from "@interfaces/Pokemon";
import PokemonCard from "@components/pokemons/PokemonCard.astro";

const response = await fetch("https://pokeapi.co/api/v2/pokemon");
const data = await response.json() as PokemonList;
---

<MainLayout 
	title="Listado de Pokemons"
	description="Listado de algunos Pokemons">
	<h1 class="text-3xl" >Listado de Pokemons</h1>
	<hr>

	<section class="grid grid-cols-1 sm:grid-cols-4 md:grid-cols-5 gap-4 mt-10" aria-label="Listado de Pokemons" >
		{ data.results.map(({name, url}) => <PokemonCard name={name} url={url} ></PokemonCard>)}
	</section>
</MainLayout>
